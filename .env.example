# Backend Configuration
PORT=3000
NODE_ENV=development
DATABASE_URL=postgresql://clustercord:password@localhost:5432/clustercord
JWT_SECRET=replace-with-secure-random-string-min-32-chars
ENCRYPTION_MASTER_KEY=replace-with-32-byte-hex-string

# Email Provider (choose one: resend, ses, postmark, smtp)
EMAIL_PROVIDER=smtp
EMAIL_PROVIDER_API_KEY=your-api-key-here
EMAIL_FROM=ClusterCord <noreply@example.com>
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false

# Security Settings
OTP_TTL_SECONDS=300
IP_SALT=replace-with-random-salt-for-ip-hashing
SESSION_TTL_SECONDS=600
MAX_COMMANDS_PER_MINUTE=30
MAX_OUTPUT_BYTES_PER_MINUTE=1048576

# Kubernetes
K8S_ADMIN_KUBECONFIG=/etc/clustercord/admin.kubeconfig

# Discord Bot
DISCORD_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
BOT_PUBLIC_KEY=your-discord-public-key
BACKEND_URL=http://localhost:3000

# Feature Flags
ENABLE_TERMINAL=true
ENABLE_HELM_MANAGER=false
ENABLE_GITOPS=false

# Terminal Recording Settings
TERMINAL_RECORDING_ENABLED=true
RECORDING_RETENTION_DAYS=30
RECORDING_MAX_SIZE_MB=50
